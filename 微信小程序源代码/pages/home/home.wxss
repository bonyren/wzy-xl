/* pages/home.wxss */
.index-search-bar {
	height: 88rpx;
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #ededed;
}

.index-search-bar .logo {
	margin-left: 20rpx;
	height: 70rpx;
}

.index-search-bar .title {
	font-weight: bolder;
	margin-left: 20rpx;
	width: 350rpx;
	line-height: 88rpx;
}

.index-page-body {
	position: relative;
	top: 88rpx;
}

.popular-section-title {
	position: relative;
	height: 48rpx;
	line-height: 48rpx;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
	font-size: 36rpx;
	padding-left: 40rpx;
	background-color: #ddf1ea;
	font-weight: bolder;
	color: #666;
	text-shadow: 1px 1px 2px #499f84;
}

.popular-section-title:before {
	content: ".";
	display: inline-block;
	width: 12rpx;
	background-color: #499f84;
	color: #499f84;
	margin-right: 20rpx;
}
.popular-section-title .popular-section-refresh{
	position: absolute;
	top: calc(50% - 24rpx);
	right: 20rpx;
}
.index-page-body .index-shortcut-container {
	margin: 20rpx;
	padding: 20rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-around;
  	font-size: 28rpx;
  	box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.index-page-body .popular-subject-section {
	min-height: 750rpx;
}

.index-page-body .popular-subject-switch {
	padding: 20rpx;
}

.index-page-body .popular-subject-switch button {
	font-size: 28rpx;
	height: 70rpx;
	width: 100%;
	background-color: #DCDCDC;
	color: #499f84;
}

.index-page-body .popular-subject-section .popular-subject-container {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	flex-wrap: wrap;
}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box {
	width: 320rpx;
	margin: 20rpx;
	min-width: 0;
	word-wrap: break-word;
	background-color: #fff;
	background-clip: border-box;
	border: 1px solid rgba(0, 0, 0, 0.125);
	border-radius: 8rpx;
	box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box .popular-subject-image {}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box .popular-subject-title {
	height: 80rpx;
	margin: 0rpx 10rpx;
	font-size: 26rpx;
	font-weight: bolder;
	color: #1C1C1C;
	line-height: 32rpx;
	vertical-align: baseline;
	word-wrap: break-all;
	word-break: break-all;
	white-space: normal;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box .popular-subject-opt {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	flex-wrap: nowrap;
	margin: 0rpx 10rpx;
	height: 60rpx;
	line-height: 60rpx;
}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box .popular-subject-opt .popular-subject-opt-label {
	font-size: 24rpx;
	line-height: 60rpx;
	height: 60rpx;
}

.index-page-body .popular-subject-section .popular-subject-container .popular-subject-box .popular-subject-opt .popular-subject-opt-btn button {
	font-size: 24rpx;
	font-weight: initial;
	height: 45rpx;
	background-color: #54a58c;
	color: #fff;
	border-radius: 20rpx;
}

/*************************************************************************************/
.featured-subject-list {}

.featured-subject-list .featured-subject-item {
	margin: 20rpx;
	box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
	/*
	box-shadow: 0 0 0 1rpx rgba(108, 117, 125, 0.5);
	*/
}

.featured-subject-list .featured-subject-item {
	display: -ms-flexbox;
	display: flex;
	-ms-flex-direction: row;
	flex-direction: row;
	min-width: 0;
	word-wrap: break-word;
	background-color: #fff;
	background-clip: border-box;
	border: 1px solid rgba(0, 0, 0, 0.125);
	border-radius: 8rpx;
}

.featured-subject-list .featured-subject-item .featured-subject-image {
	padding: 10rpx;
	width: 300rpx;
	display: flex;
	align-items: center;
}

.featured-subject-list .featured-subject-item .featured-subject-image image {
	background-color: #fff;
	border: 1px solid #dee2e6;
	border-radius: 8rpx;
	max-width: 100%;
	height: auto;
}

.featured-subject-list .featured-subject-item .featured-subject-brief {
	width: 370rpx;
	padding: 15rpx 10rpx;
	border-bottom: 1px solid #e5e5e5;
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-between;
}

.featured-subject-list .featured-subject-item .featured-subject-brief .featured-subject-name {
	font-size: 26rpx;
	font-weight: bolder;
	color: #1C1C1C;
	line-height: 35rpx;
	vertical-align: baseline;
	word-wrap: break-all;
	word-break: break-all;
	white-space: normal;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
  	-webkit-box-orient: vertical;
  	margin-bottom: 10rpx;
}

.featured-subject-list .featured-subject-item .featured-subject-brief .featured-subject-subtitle {
	font-size: 21rpx;
	color: #6a6a6a;
	word-wrap: break-all;
	word-break: break-all;
	white-space: normal;
	padding: 3.2rpx;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
  	-webkit-box-orient: vertical;
  	margin-bottom: 10rpx;
}

.featured-subject-list .featured-subject-item .featured-subject-brief .featured-subject-label {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
  	justify-content: flex-start;
  	margin-bottom: 5rpx;
}

.featured-subject-list .featured-subject-item .featured-subject-brief .featured-subject-label text {
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	text-align: center;
	background-color: #fbecd0;
	color: #fc8500;
	opacity: 0.88;
	padding: 3.2rpx 6.4rpx;
	margin: 3.2rpx 6.4rpx;
}

.featured-subject-list .featured-subject-item .featured-subject-brief .featured-subject-text {
	display: flex;
	justify-content: space-between;
	padding: 3.2rpx;
	font-size: 22rpx;
	color: #8d8d8d;
}

.featured-subject-list .featured-subject-item .featured-subject-opt {
	margin: 20rpx;
	text-align: right;
}

.featured-subject-list .featured-subject-item .featured-subject-opt button {
	color: #ffffff;
	font-size: 26rpx;
	font-weight: initial;
	height: 50rpx;
	background-color: #54a58c;
	color: #fff;
}